<h2 align="center">Title: <%= @article.title %></p>

<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr/>
  <%= simple_format(@article.description) %> <!-- keeps tabs and everything exactly the same -->
  <h6>Created_at: <%= @article.created_at %></h6>
  <h6>Updated_at: <%= @article.updated_at %></h6>
  
  <div class="article-actions">
  
    <%=link_to 'Edit', edit_article_path(@article), class: "btn btn-xs btn-primary" %> |
    <%=link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?"},  class: "btn btn-xs btn-danger" %> |
    <%=link_to 'Back', articles_path, class: "btn btn-xs btn-success" %>
  </div>
</div>

